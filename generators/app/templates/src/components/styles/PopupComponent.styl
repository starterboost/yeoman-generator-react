@import "../../index"

.container
	position absolute
	top 0px
	left 0px
	
	width 100%
	height 100%

	text-align center
	
	.content
		position relative
		max-width 400px
		text-align left
		padding 20px
		margin 50px auto 0px auto
		background-color #ffffff
		display block
	

	.header
		margin-bottom 10px

		&::after
			content ''
			display block
			clear both
		


	&::before
		content ''
		display block
		
		//pointer-events none

		position absolute
		top 0px
		left 0px
		width 100%
		height 100%
		background-color rgba(0,0,0,0.4)

